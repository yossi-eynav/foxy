{
  "manifest_version": 2,
  "name": "Foxy - a random picture on every new tab from your Drive",
  "description": "On every new tab, a random picture will be displayed from a chosen Google Drive folder. fork me on github! - https://github.com/yossi-eynav/foxy",
  "version": "4.0",
  "options_page": "options.html",
  "chrome_url_overrides": {
    "newtab": "tab.html"
  },
  "content_security_policy": "script-src 'self' https://apis.google.com 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "tabs",
    "identity",
    "https://apis.google.com/js/client.js"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "oauth2": {
    "client_id": "903841215034-igcmb693651nas473099upppddqjm61q.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive",
      "https://www.googleapis.com/auth/drive.metadata.readonly",
      "https://www.googleapis.com/auth/drive.photos.readonly",
      "https://www.googleapis.com/auth/drive.readonly",
      "profile",
      "email"
    ]
  }
}